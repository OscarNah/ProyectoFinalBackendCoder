<main>
<header>
   <h1>Carrito de Compras</h1>
</header>

<div class="miPerfil">
   <h2>Productos en tu carrito</h2>
   <p>Tu numero de carrito es:{{cartId}}</p>
   <a href="/products">Regresar a productos</a>
</div>

<div class="contenedor">
   {{#each productos}}
      <div>
         <p>Producto: {{this.product.title}}</p>
         <p>Precio por unidad: {{this.product.price}}</p>
         <p>Cantidad: {{this.quantity}}</p>
         <p>Total por producto: ${{this.product.totalPrice}}</p>
         <button onclick="eliminarProducto('{{this.cartId}}', '{{this.product._id}}')" class="btn btn-danger">Eliminar</button>
      </div>
   {{/each}}
</div>
<h3>Total de la compra: ${{totalCompra}}</h3>
<button onclick="vaciarCarrito('{{cartId}}')" class="btn-vaciar">Vaciar Carrito</button>
<button onclick="finalizarCompra('{{cartId}}')" class="btn-vaciar">Finalizar Compra</button>
</main>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="/js/cart.js"></script>